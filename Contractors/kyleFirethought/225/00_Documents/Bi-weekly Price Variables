//Percentage
var percentageMultiplier = thisComp.layer("CTRL").effect("percentageMultiplier")("Slider");
var percentageSlider = thisComp.layer("CTRL").effect("percentageSlider")("Slider").value.toFixed(2);
percentageSlider + "%";

//Percentage Multiplier
value*percentageMultiplier;

//Percentage Arrow Color
if (percentageSlider == 0) {
  colorControl8;
} else if (percentageSlider <= 0) {
  colorControl6;
} else if (percentageSlider >= 0) {
  colorControl5;
}

//Percentage Arrow Direction
if (percentageSlider < 0) {
  180;
} else {
  0;
}

//Percentage Arrow Opacity
var percentageSlider = thisComp.layer("CTRL").effect("percentageSlider")("Slider").value.toFixed(2);

if ((typeDropdownMenu == 1)&&(percentageSlider !== 0)) {
  100;
} else {
  0;
}

//Percentage Position Adjust
tempX = transform.position[0]
tempY = transform.position[1]

if ((percentageSlider >= 10)||(percentageSlider <= -10) {
  [tempX - 45,tempY];
} else {
  [tempX,tempY];
}

